<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#e4e4e4"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#e4e4e4"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.3"
            android:text="系统项目"
            android:gravity="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:onClick="update"
            android:text="关于"
            android:gravity="center"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/shape_gray">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务器地址："
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务器端口："
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通 行 模 式 ："
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="临时车入场是否确认："
                    android:textSize="20sp"/>
               <!-- <Button
                    android:text="否"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>
                <Button
                    android:text="是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>-->
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/tb_togglebutton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:jtbJelly="itself"
                    app:jtbLeftText="否"
                    app:jtbRightText="是"
                    app:jtbLeftTextSize="16sp"
                    app:jtbRightTextSize="16sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    app:jtbTextMarginCenter="4dp"
                    app:jtbLeftBackgroundColor="@android:color/white"
                    app:jtbRightBackgroundColor="@android:color/white"
                    app:jtbLeftThumbColor="#f00"
                    app:jtbRightThumbColor="#0f0"
                    app:jtbLeftTextColor="@android:color/black"
                    app:jtbRightTextColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零收费车辆是否确："
                    android:textSize="20sp"/>
              <!--  <Button
                    android:text="否"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>
                <Button
                    android:text="是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>-->
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/tb_togglebutton1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:jtbJelly="itself"
                    app:jtbLeftText="否"
                    app:jtbRightText="是"
                    app:jtbLeftTextSize="16sp"
                    app:jtbRightTextSize="16sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    app:jtbTextMarginCenter="4dp"
                    app:jtbLeftBackgroundColor="@android:color/white"
                    app:jtbRightBackgroundColor="@android:color/white"
                    app:jtbLeftThumbColor="#f00"
                    app:jtbRightThumbColor="#0f0"
                    app:jtbLeftTextColor="@android:color/black"
                    app:jtbRightTextColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否打印小票："
                    android:textSize="20sp"/>
                <!--<Button
                    android:text="否"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>
                <Button
                    android:text="是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>-->
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/tb_togglebutton2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:jtbJelly="itself"
                    app:jtbLeftText="否"
                    app:jtbRightText="是"
                    app:jtbLeftTextSize="16sp"
                    app:jtbRightTextSize="16sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    app:jtbTextMarginCenter="4dp"
                    app:jtbLeftBackgroundColor="@android:color/white"
                    app:jtbRightBackgroundColor="@android:color/white"
                    app:jtbLeftThumbColor="#f00"
                    app:jtbRightThumbColor="#0f0"
                    app:jtbLeftTextColor="@android:color/black"
                    app:jtbRightTextColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用读卡器："
                    android:textSize="20sp"/>
                <!--<Button
                    android:text="否"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>
                <Button
                    android:text="是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white"
                    android:textSize="15sp"/>-->
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/tb_togglebutton3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:jtbJelly="itself"
                    app:jtbLeftText="否"
                    app:jtbRightText="是"
                    app:jtbLeftTextSize="16sp"
                    app:jtbRightTextSize="16sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    app:jtbTextMarginCenter="4dp"
                    app:jtbLeftBackgroundColor="@android:color/white"
                    app:jtbRightBackgroundColor="@android:color/white"
                    app:jtbLeftThumbColor="#f00"
                    app:jtbRightThumbColor="#0f0"
                    app:jtbLeftTextColor="@android:color/black"
                    app:jtbRightTextColor="@android:color/black"/>
            </LinearLayout>

            <Button
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="保存修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_gray"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件版本：V1.0.15"
                android:textSize="20sp"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备ID: 1A34934241B"
                android:textSize="20sp"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="受权用户：太重嘉园小区"
                android:textSize="20sp"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厂商：山西刚正信息自动化有限公司承制"
                android:textSize="20sp"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务电话：xxxx-xxxx-xxxx"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>